<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Palette">

        android:layout_height="wrap_content" />
    <!-- boutons bascule -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!--  utilise les étiquettes par défaut (ON/OFF) -->
        <ToggleButton
            android:id="@+id/ToggleButton1"
            android:textOn="@string/rouge_on"
            android:textOff="@string/rouge_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="afficherInfosBoutonBascule"/>
        <ToggleButton
            android:id="@+id/ToggleButton2"
            android:textOn="@string/vert_on"
            android:textOff="@string/vert_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="afficherInfosBoutonBascule"/>
        <ToggleButton
            android:id="@+id/ToggleButton3"
            android:textOn="@string/bleu_on"
            android:textOff="@string/bleu_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="afficherInfosBoutonBascule"/>
        <TextView
            android:id="@+id/zone_couleur"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>

</RelativeLayout>
